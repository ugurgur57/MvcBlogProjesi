@model List<MvcBlogProjesi.DataModel.Makale>

@{
    ViewBag.Title = "Index";
}

<h2>Tüm Makaleler</h2>

@foreach (var item in Model)
{
    <div style="width:100%; margin-top:25px; border:1px solid gray; padding:25px">
        <h3 style="color:red">
        @Html.DisplayFor(m => item.Baslik)</h3><hr />
        @Html.Raw(@item.Icerik)<hr />
        @Html.Label("Tarih : ")
        @Html.DisplayFor(m => item.Tarih)<hr />
        <h4>Makaleyi Yazan</h4>
        @{ string adsoyad = item.Uye.Ad + " " + item.Uye.Soyad;}
        @Html.Label("Adı ve Soyadı : ")&nbsp;&nbsp;&nbsp;@adsoyad
    </div>
}

